generator client {
provider = "prisma-client-js"
}

datasource db {
provider = "mongodb"
url      = env("DATABASE_URL")
}

model Destination {
  id                         String       @id @default(auto()) @map("_id") @db.ObjectId
  name                       String
  about                      String
  continent                  String
  map_link                   String    
  weather                    Json 
  language                   String[]
  currency                   String
  area                       Int
  population                 Int
  time_zone                  String     
  time_to_travel             String[]  
  images                     String[]
  travel_count               Int
}

model Experience {
  id                         String       @id @default(auto()) @map("_id") @db.ObjectId
  name                       String
  city                       String
  image                      String
  mapLink                    String
  startDate                  DateTime
  duration                   Float
  isActivity                 Boolean
  type                       String[]
  maxPeople                  Int
  minAge                     Int
  overView                   String
  include                    String[]
  exclude                    String[]
  plans                      String[]
  price                      Json  
  destination_id             String       
}

model Review {
  id                         String       @id @default(auto()) @map("_id") @db.ObjectId
  name                       String
  email                      String
  comment                    String
  image                      String
  score                      Json  
  createdAt                  DateTime     @default(now())
  experienseId               String      
}

model Favorite {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  favorites                   String[]
  userId                      String       @map("user_id")
}

model Booking {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  date                        String
  duration                    Float
  ticket                      Json
  userId                      String       @map("user_id")
}

model Plan {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  time                        String
  title                       String
  description                 String
  userId                      String      
}

model Newsletter {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  email                       String
  userId                      String      
}