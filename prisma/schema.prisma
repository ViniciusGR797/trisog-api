generator client {
provider = "prisma-client-js"
}

datasource db {
provider = "mongodb"
url      = env("DATABASE_URL")
}

model Destination {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  name                        String
  about                       String
  continent                   String
  map_link                    String    
  weather                     Json 
  language                    String[]
  currency                    String
  area                        Int
  population                  Int
  time_zone                   String     
  time_to_travel              String[]  
  images                      String[]
  travel_count                Int
}

model Category {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  name                        String
  icon                        String
  travel_count                Int
}

model Plan {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  time                        String
  title                       String
  description                 String      
  topics                      String[]      
}

model Experience {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  title                       String
  city                        String
  image                       String
  video                       String
  gallery                     String
  map_link                    String
  start_date                  DateTime
  end_date                    DateTime
  duration                    Int
  is_activity                 Boolean
  max_people                  Int
  min_age                     Int
  over_view                   String
  include                     String[]
  exclude                     String[]
  rating                      Float
  review_count                Int
  default_price               Float  
  custom_prices               Json[]  
  categories_id               String[]
  plans_id                    String[]
  destination_id              String       
}

model Review {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  name                        String
  email                       String
  comment                     String
  image                       String
  score                       Int  
  created_at                  DateTime     @default(now())
  experience_id               String      
}

model Favorite {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  experience_id               String
  user_id                     String
}

model Booking {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  date                        DateTime
  time                        String
  ticket                      Json
  total_price               Float  
  experience_id               String      
  user_id                     String      
}

model Testimonial {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  message                     String
  author                      String      
}

model Newsletter {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  email                       String
  user_id                     String      
}